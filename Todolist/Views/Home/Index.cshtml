@model List<ToDoList.Models.Task>

<h1>To-Do List</h1>

<ul>
    @foreach (var task in Model)
    {
        <li>
            @task.Description @if (task.DueDate != null)
            {
                <span>(Due: @task.DueDate.ToString("MM/dd/yyyy"))</span>
            }
            @if (!task.Completed)
            {
                <form asp-action="MarkAsComplete" asp-route-id="@task.Id" method="post">
                    <button type="submit">Mark as Complete</button>
                </form>
            }
        </li>
    }
</ul>

<h2>Add New Task</h2>

<form asp-action="AddTask" method="post">
    <div>
        <label>Description:</label>
        <input type="text" name="Description" required>
    </div>
    <div>
        <label>Due Date:</label>
        <input type="date" name="DueDate">
    </div>
    <button type="submit">Add Task</button>
</form>
